<Page xmlns:sb="nativescript-statusbar" actionBarHidden="true" pageTransition = "slide">
    <Page.ActionBar>
        <sb:StatusBar android:barStyle="#00a1ff" />
    </Page.ActionBar>
    <StackLayout>
        <StackLayout
        id                = "profileExpander"
        backgroundColor   = "#00a1ff"
        height            = "45%"
        verticalAlignment = "top"
        tap               = "expandProfile"
        >
            <StackLayout>
                <Image
                    id                  = "toggleSwitch"
                    src                 = "~/images/settings.png"
                    horizontalAlignment = "right"
                    height              = "30"
                    width               = "30"
                    marginRight         = "20"
                    marginTop           = "20"
                    color               = "white"
                    tap                 = "settings" />
                <Image 
                    marginTop           = "10"
                    backgroundColor     = "white"
                    src                 = "~/images/user.png"
                    height              = "80"
                    width               = "80"
                    borderColor         = "white"
                    borderWidth         = "4"
                    borderRadius        = "100%"
                    />
                <Label 
                    marginTop           = "20"
                    fontSize            = "20"
                    text                = "Sandesh Bhusal"
                    textAlignment       = "center"
                    color               = "white"
                    width               = "50%"
                    />
                <Label 
                    width               = "30%"
                    text                = "TAP TO VIEW PROFILE"
                    fontSize            = "10"
                    color               = "white"
                    textAlignment       = "center"
                    padding             = "0"
                    marginTop           = "10"
                    />
            </StackLayout>
        </StackLayout>
        <StackLayout>
            <TabView>
                <TabView.items>
                <TabViewItem title="Subjects">
                    <TabViewItem.view>
                        <ScrollView>
                            <GridLayout
                            columns = "*, *, *"
                            rows    = "40, auto, 60, auto, 60"
                            >
                                <Image src="~/images/physics.png" width = "60" height = "60" col = "0" row = "1" backgroundColor="transparent"/>
                                <Image src="~/images/chemistry.png" width = "60" height = "60"  col = "1" row = "1" backgroundColor="transparent"/>
                                <Image src="~/images/math.png" width = "60" height = "60"  col = "2" row = "1" backgroundColor="transparent"/>
                                
                                <Label textAlignment = "center" col = "0" row = "2" text = "Physics" />
                                <Label textAlignment = "center" col = "1" row = "2" text = "Chemistry" />
                                <Label textAlignment = "center" col = "2" row = "2" text = "Maths" />
                                
                                <Image src="~/images/english.png" width = "60" height = "60"  col = "0" row = "3" backgroundColor="transparent"/>
                                <Image src="~/images/aptitude.png" width = "60" height = "60"  col = "1" row = "3" backgroundColor="transparent"/>

                                <Label textAlignment = "center" col = "0" row = "4" text = "English" />
                                <Label textAlignment = "center" col = "1" row = "4" text = "Aptitude" />
                                <Label textAlignment = "center" col = "2" row = "4" text = "" />

                                <Label col = "0" row = "5" />
                            </GridLayout>
                        </ScrollView>                 
                    </TabViewItem.view>
                </TabViewItem>
                <TabViewItem title="Take an exam">
                    <TabViewItem.view>
                        <StackLayout>

                        </StackLayout>
                    </TabViewItem.view>
                </TabViewItem>
                </TabView.items>
            </TabView>
        </StackLayout>
        <DockLayout>
            <Label dock = "bottom" text = "Bottom" />
        </DockLayout>  
    </StackLayout>
</Page>